CompileFlags:
  Add:
    - -std=c++20
    - -D_CRT_SECURE_NO_WARNINGS
    - -DUNICODE
    - -D_UNICODE
    - -DNOMINMAX
    - -DWIN32_LEAN_AND_MEAN
    - -Waddress
    - -Warray-bounds
    - -Wbool-operation
    - -Wchar-subscripts
    - -Wcomment
    - -Wconversion
    - -Wdouble-promotion
    - -Wformat
    - -Wimplicit-fallthrough
    - -Wlogical-not-parentheses
    - -Wmisleading-indentation
    - -Wmissing-braces
    - -Wreturn-type
    - -Wsign-compare
    - -Wstrict-aliasing
    - -Wswitch
    - -Wtautological-compare
    - -Wuninitialized
    - -Wunknown-pragmas
    - -Wunused-function
    - -Wunused-label
    - -Wunused-value
    - -Wunused-variable
    - -Wshadow
    - -Wnull-dereference
    - -Wold-style-cast
    - -Wcast-align
    - -Wcast-qual
    - -Wfloat-equal
    - -Wunsequenced
    - -Wshadow-field

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict
  Suppress: [-Wc++17-extensions]
